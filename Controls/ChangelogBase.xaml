<UserControl x:Class="Menhely_Projekt.Controls.ChangelogBase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Menhely_Projekt.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Navbar at the top -->
        <local:NavControl Height="50" VerticalAlignment="Top" x:Name="NavBar"/>

        <!-- Main Content Grid -->
        <Grid Margin="0,50,0,0">
            <!-- Push content below Navbar -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- ComboBoxes -->
                <RowDefinition Height="*"/>
                <!-- Table -->
            </Grid.RowDefinitions>

            <!-- ComboBoxes at the top -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,10">
                <ComboBox x:Name="User_cb" Width="200" Height="30" Margin="10,0,10,0"/>
                <ComboBox x:Name="Category_cb" Width="200" Height="30" Margin="10,10,20,10"/>
                <ComboBox x:Name="SubCategory_cb" Width="200" Height="30"/>
            </StackPanel>

            <!-- Table (DataGrid) -->
            <DataGrid x:Name="Changelog_dg" Grid.Row="1" Margin="10" AutoGenerateColumns="True" 
                      HeadersVisibility="Column" CanUserAddRows="False"/>
        </Grid>
    </Grid>
</UserControl>
