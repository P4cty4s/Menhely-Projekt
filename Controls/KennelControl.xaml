<UserControl x:Class="Menhely_Projekt.Controls.KennelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Menhely_Projekt.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="1920" d:DesignWidth="1080">
    <Grid>
        <!-- Navbar at the top -->
        <local:NavControl Height="50" VerticalAlignment="Top" x:Name="NavBar"/>

        <Grid Margin="0,50,0,0">
            <!-- Push content below Navbar -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <!-- Left panel width -->
                <ColumnDefinition Width="*"/>
                <!-- Main content area -->
            </Grid.ColumnDefinitions>

            <!-- Left Side: Scrollable Panel for Labels -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Background="Wheat" Margin="0,50,0,0">
                <ListBox x:Name="Kutyak_panel" Margin="10" DragEnter="Kutyak_panel_DragEnter"/>
            </ScrollViewer>

            <!-- Right Side -->
            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- ComboBox at the top -->
                    <RowDefinition Height="*"/>
                    <!-- Scrollable ListBoxes -->
                </Grid.RowDefinitions>

                <!-- ComboBox -->
                <ComboBox x:Name="Udvarok_cb" Width="300" Height="30" Margin="440,-11,0,11" />

                <!-- Scrollable Panel for ListBoxes -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="LightGray">
                    <StackPanel x:Name="Kennel_panel" Margin="10" />
                </ScrollViewer>
                <Button Content="Kennel hozzáadása" Width="300" Height="30" HorizontalAlignment="Left" Margin="10,-16,0,0" VerticalAlignment="Top" Click="Button_Click"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
