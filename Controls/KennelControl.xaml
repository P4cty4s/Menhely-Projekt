<UserControl x:Class="Menhely_Projekt.Controls.KennelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Menhely_Projekt.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="1920" d:DesignWidth="1080">
    <Grid>
        <!-- Navbar at the top -->
        <local:NavControl Height="50" VerticalAlignment="Top" x:Name="NavBar"/>

        <Grid Margin="0,50,0,0">
            <!-- Push content below Navbar -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <!-- Left panel width -->
                <ColumnDefinition Width="*"/>
                <!-- Main content area -->
            </Grid.ColumnDefinitions>

            <!-- Left Side: Scrollable Panel for Labels -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="LeftPanel" Margin="10" />
            </ScrollViewer>

            <!-- Right Side -->
            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- ComboBox at the top -->
                    <RowDefinition Height="*"/>
                    <!-- Scrollable ListBoxes -->
                </Grid.RowDefinitions>

                <!-- ComboBox -->
                <ComboBox x:Name="RightComboBox" Width="300" Height="30" />

                <!-- Scrollable Panel for ListBoxes -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="RightPanel" Margin="10" />
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
