<Window x:Class="Menhely_Projekt.CreateConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menhely_Projekt"
        mc:Ignorable="d"
        Title="CreateConfig" Height="400" Width="300">
    <Grid>
        <!-- Elrendezés -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="0" />
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Host:" Width="250"/>
            <TextBox x:Name="DataSource_tb" Width="200" Margin="30,0,0,0"/>

            <Label Content="Port:" Width="250"/>
            <TextBox x:Name="Port_tb" Width="200" Margin="30,0,0,0"/>

            <Label Content="Név:" Width="250"/>
            <TextBox x:Name="Username_tb" Width="200" Margin="30,0,0,0"/>

            <Label Content="Jelszó:" Width="250"/>
            <TextBox x:Name="Password_tb" Width="200" Margin="30,0,0,0"/>

            <Label Content="Adatbázis neve:" Width="250"/>
            <TextBox x:Name="DataBase_tb" Width="200" Margin="30,0,0,0"/>

            <Button Content="Megerősít" Width="100" Margin="0,10,0,20" x:Name="CreateConfig_btn" Click="CreateCfgFile"/>
        </StackPanel>
    </Grid>
</Window>
