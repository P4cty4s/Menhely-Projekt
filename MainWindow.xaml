<Window x:Class="Menhely_Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menhely_Projekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400"
        ResizeMode="NoResize">
    <Grid>
        <Label Content="Jelentkezz be!" FontSize="32" HorizontalAlignment="Center" Margin="0,30,0,0"/>
        <Label Content="Felhasználó név:" FontSize="22" HorizontalAlignment="Left" Margin="50,90,0,0"/>
        <TextBox x:Name="tb_name" Width="200" Height="50" HorizontalAlignment="Left" Margin="50,147,0,387"/>
        <Label Content="Jelszó:" FontSize="22" HorizontalAlignment="Left" Margin="50,219,0,-69"/>
        <TextBox x:Name="tb_password" Width="200" Height="50" HorizontalAlignment="Left" Margin="50,267,0,267"/>
        <Button Name="btn_login" Width="200" Height="50" Margin="0,300,0,0" Content="Bejelentkezés" Click="btn_login_Click"/>
    </Grid>
</Window>
